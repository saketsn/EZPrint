<?xml version="1.0" encoding="utf-8"?>
<!-- This drawable uses multiple layers to create a shadow effect -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Layer 1: The Shadow -->
    <!-- This is a slightly larger, semi-transparent shape offset down and to the right -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#1A000000" /> <!-- A semi-transparent black for the shadow -->
            <corners android:radius="13dp" />
        </shape>
    </item>

    <!-- Layer 2: The Main White Background -->
    <!-- This is the original white shape, drawn on top of the shadow -->
    <item android:bottom="2dp" android:right="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white" />
            <corners android:radius="12dp" />
        </shape>
    </item>

</layer-list>
