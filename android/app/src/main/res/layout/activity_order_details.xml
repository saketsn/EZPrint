<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F4F6F8"
    android:fillViewport="true"
    tools:context=".OrderDetails">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Header -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/search_icon_background"
                android:padding="4dp"
                android:src="@drawable/ic_arrow_back" />

            <TextView
                android:id="@+id/header_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Order Details"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/more_options_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:background="@drawable/search_icon_background"
                android:padding="4dp"
                android:src="@drawable/ic_home" />
        </LinearLayout>

        <!-- This layout wraps the main content and is hidden during initial load -->
        <LinearLayout
            android:id="@+id/content_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:visibility="gone"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            tools:visibility="visible">

            <!-- Order Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/order_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <!-- Order ID and Status -->
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/order_status_text"
                            style="@style/DetailTag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentEnd="true"
                            android:textColor="@color/white"
                            android:background="@drawable/status_background_completed"
                            tools:text="Completed" />

                        <TextView
                            android:id="@+id/order_code_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_toStartOf="@id/order_status_text"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginEnd="8dp"
                            tools:text="-- -- -- -- --" />
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/order_date_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:textColor="@color/gray"
                        tools:text="28 Sep 2025, 10:30 AM" />
                    <TextView
                        android:id="@+id/notes_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:textColor="@color/black"
                        tools:text="-- -- -- -- -- --" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Student Info Card -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Student Details"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/student_info_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="10dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">
                    <TextView
                        android:id="@+id/student_name_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="N/A" />

                    <!-- Phone Number Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_phone_details"
                            app:tint="@color/gray"/>

                        <TextView
                            android:id="@+id/student_phone_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/gray"
                            tools:text="N/A"/>
                    </LinearLayout>

                    <!-- Email Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_email_details"
                            app:tint="@color/gray"/>

                        <TextView
                            android:id="@+id/student_email_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/gray"
                            tools:text="N/A"/>
                    </LinearLayout>

                    <!-- UPDATED: ID Proof Section -->
                    <TextView
                        android:id="@+id/id_proof_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:textStyle="bold"
                        android:text="ID Proof Attached"
                        android:textColor="@color/black" />

                    <!-- Using an include tag for a consistent look -->
                    <include
                        android:id="@+id/id_proof_layout"
                        layout="@layout/item_document_proof"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Files to Print Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Files to Print"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/documents_recycler_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:nestedScrollingEnabled="false" />

            <!-- Payment & Action Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="Finalize Order"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/payment_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="50dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <!-- NEW: Message for pending orders -->
                    <TextView
                        android:id="@+id/pending_action_prompt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please accept or reject the order from the 'Pending Orders' screen first."
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="16sp"
                        android:visibility="gone"
                        android:padding="16dp"
                        tools:visibility="gone"/>

                    <!-- Amount Field (First Row) -->
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/final_amount_layout"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Amount Paid (â‚¹)">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/final_amount_edit_text"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberDecimal" />
                    </com.google.android.material.textfield.TextInputLayout>

                    <!-- Buttons Row (Second Row) -->
                    <LinearLayout
                        android:id="@+id/action_buttons_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp"
                        android:weightSum="2"
                        android:gravity="center_vertical">

                        <!-- Cancel Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/cancel_order_button"
                            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                            android:layout_width="0dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:text="Cancel"
                            android:textColor="#D32F2F"
                            app:strokeColor="#D32F2F" />

                        <!-- Spacer -->
                        <Space
                            android:layout_width="16dp"
                            android:layout_height="wrap_content" />

                        <!-- Complete Button with Progress -->
                        <FrameLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/complete_order_button"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:backgroundTint="@color/primaryPurple"
                                android:text="Completed"
                                app:cornerRadius="6dp" />

                            <ProgressBar
                                android:id="@+id/button_progress_bar"
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_gravity="center"
                                android:elevation="8dp"
                                android:indeterminateTint="@android:color/white"
                                android:visibility="gone" />
                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Main Loading Spinner -->
        <ProgressBar
            android:id="@+id/main_loading_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Animation Overlay -->
        <View
            android:id="@+id/animation_overlay"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="#80000000"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/success_animation_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_rawRes="@raw/successful_order"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/cancel_animation_view"
            android:layout_width="250dp"
            android:layout_height="250dp"
            app:lottie_rawRes="@raw/fail_order"
            app:lottie_autoPlay="false"
            app:lottie_loop="false"
            android:visibility="gone"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>