<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/bottom_sheet_background">

    <!-- Grabber Handle -->
    <View
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/search_icon_background"
        android:layout_marginBottom="16dp"/>

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- UPDATED: Replaced ImageView with LottieAnimationView -->
        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/order_animation_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            app:lottie_rawRes="@raw/new_order"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/order_animation_view"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Order Received"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/customer_name_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray"
                tools:text="from Prakash Sirvi"/>
        </LinearLayout>
    </RelativeLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E0E0E0"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>

    <!-- Order Details Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Files -->
        <LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center">
            <ImageView android:src="@drawable/ic_file_count" android:layout_width="24dp" android:layout_height="24dp"/>
            <TextView android:id="@+id/file_count_text" android:textStyle="bold" android:textColor="@color/black" tools:text="5 Files" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <!-- Copies -->
        <LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center">
            <ImageView android:src="@drawable/ic_copies__details" android:layout_width="24dp" android:layout_height="24dp"/>
            <TextView android:id="@+id/total_copies_text" android:textStyle="bold" android:textColor="@color/black" tools:text="12 Copies" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>
        <!-- Print Type -->
        <LinearLayout android:orientation="vertical" android:layout_weight="1" android:layout_width="0dp" android:layout_height="wrap_content" android:gravity="center">
            <ImageView android:src="@drawable/ic_print_type" android:layout_width="24dp" android:layout_height="24dp"/>
            <TextView android:id="@+id/print_type_text" android:textStyle="bold" android:textColor="@color/black" tools:text="Color/B&amp;W" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
        </LinearLayout>

    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#F0F0F0"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"/>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/reject_button"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:text="Reject"
            android:textColor="#D32F2F"
            app:strokeColor="#D32F2F"
            app:cornerRadius="12dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/accept_button"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:text="Accept"
            android:textColor="@color/white"
            android:backgroundTint="@color/primaryPurple"
            app:cornerRadius="12dp"/>

    </LinearLayout>
</LinearLayout>

