<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="6dp"
    app:strokeWidth="0dp"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="3dp"
    android:layout_marginEnd="3dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/document_content_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <!-- File Name -->
        <TextView
            android:id="@+id/doc_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="--" />

        <!-- File Category / Status -->
        <TextView
            android:id="@+id/doc_status"
            style="@style/DetailTag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/status_background_completed"
            android:textColor="@color/white"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            app:layout_constraintTop_toBottomOf="@id/doc_name"
            app:layout_constraintStart_toStartOf="@id/doc_name"
            tools:text="Completed" />

        <!-- Divider -->
        <View
            android:id="@+id/divider_btw"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#F0F0F0"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="5dp"
            app:layout_constraintTop_toBottomOf="@id/doc_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Details Row -->
        <LinearLayout
            android:id="@+id/details_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            app:layout_constraintTop_toBottomOf="@id/divider_btw"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/doc_copies"
                style="@style/DetailTag"
                android:text="2 Copies" />

            <TextView
                android:id="@+id/doc_color"
                style="@style/DetailTag"
                android:text="Color"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/doc_duplex"
                style="@style/DetailTag"
                android:text="Duplex"
                android:layout_marginStart="16dp"/>

            <TextView
                android:id="@+id/doc_pages"
                style="@style/DetailTag"
                android:text="Pages: 1-5"
                android:layout_marginStart="16dp"/>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
