<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color when the item is checked (selected) -->
    <item android:state_checked="true" android:color="@color/primaryPurple" />

    <!-- Default color for unchecked items -->
    <item android:color="@color/inactiveGray" />
</selector>
